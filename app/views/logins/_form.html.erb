<%= form_for(:logins, html: { class: "col-6 p-3 card shadow"}) do |f| %>
  <h3 class="card-title text-center"> <%= title %> </h3>

  <div class="mb-3">
    <%= f.label :email, class: "form-label"%>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your e-mail", autofocus: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label"%>
    <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <%= f.submit title, class: "btn btn-info col-7 col-sm-4 align-self-center" %>


<% end %>